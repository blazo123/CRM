@page "/contactedit/{id}"
@using CRM.Pages.ContactPage.ContactBase
@inherits ContactEditBase

<h3>ContactEdit</h3>

<EditForm Model="@Contact" OnValidSubmit="@UpdateContact">
    <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" placeholder="Name" @bind-value="Contact.Name">
    </div>
    <div class="form-group col-md-6">
      <label for="phone">Phone</label>
      <input type="text" class="form-control" id="phoneNumber" placeholder="PhoneNumber" @bind-value="Contact.PhoneNumber">
    </div>
    <div class="form-group col-md-6">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="email" placeholder="Email" @bind-value="Contact.Email">
    </div>
     <div class="form-group col-md-6">
      <label for="clientId">ClientId</label>
      <input type="number" class="form-control" id="clientId" placeholder="ClientId" @bind-value="Contact.Client.Id">
    </div>
  </div>
   <button type="submit" class="btn btn-success">Update</button>
   <button type="button" class="btn btn-primary" @onclick="() => NavigationToMainPage()">Back to main page</button>
</EditForm>



