@using CRM.Pages.Inherits
@inherits ClientDeleteBase;
@page "/clientdelete/{nip}";



<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Client.Name</h1>
            </div>
            <div class="card-body text-center">
                <h2>@Client.NIP</h2>
                <h2>@Client.City</h2>
            </div>
        </div>
        <div class="card-footer text-center">
            <p>Do you want to delete client ?</p>
            <button type="button" class="btn btn-danger" @onclick="() => DeleteClient(Client.Id)">YES</button>
            <button type="button" class="btn btn-primary" @onclick="() => NavigationToMainPage()">NO</button>
            @*<a href="/clients" class="btn btn-danger">Delete</a>*@
        </div>
    </div>
</div>
