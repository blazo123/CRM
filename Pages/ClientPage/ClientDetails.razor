@using CRM.Pages.Inherits
@page "/clientdetails/{nip}"
@inherits ClientDetailsBase;


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Client.Name</h1>
            </div>
            <div class="card-body text-center">
                <h2>@Client.NIP</h2>
                <h2>@Client.City</h2> 
                <h2>@Client.StreetName</h2>
                <h2>@Client.StreetNumber</h2>
                <h2>@Client.ApartmentNumber</h2>
                <h2>@Client.Country</h2>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="/" class="btn btn-primary">Back</a>
            <a href="@($"clientedit/{Client.NIP}")" class="btn btn-primary">Edit</a>
               <button type="button" class="btn btn-danger m-1"
                        @onclick="() => DeleteClient(Client.Id)">
                    Delete
              </button>
        </div>
    </div>
</div>





