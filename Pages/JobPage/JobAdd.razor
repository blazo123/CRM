@page "/jobadd";
@using CRM.Model
@using CRM.Pages.JobPage.JobBase
@inherits JobAddBase;

<h3>JobAdd</h3>

<EditForm Model="@Job" OnValidSubmit="AddJob">

<div class="form-row">
    <div class="form-group col-md-6">
      <label for="aubject">Subject</label>
      <input type="text" class="form-control" id="subject" placeholder="Subject" @bind-value="Job.Subject">
    </div>
    <div class="form-group col-md-6">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" placeholder="Description" @bind-value="Job.Description">
    </div>
    <div class="form-group col-md-6">
      <label for="clientId">Client Id</label>
      <input type="number" class="form-control" id="clientId" placeholder="ClientId" @bind-value="Job.Client.Id">
    </div>
    <div class="form-group col-md-6">
      <label for="userId">User Id</label>
      <input type="number" class="form-control" id="userId" placeholder="UserId" @bind-value="Job.User.Id">
    </div>
    <div class="form-group col-md-6">
      <label for="SaleAmount">SaleAmount</label>
      <input type="number" class="form-control" id="saleAmount" placeholder="SaleAmount" @bind-value="Job.SaleAmount">
    </div>
     <div class="form-group col-md-6">
      <label for="dateOfNextActivity" >DateOfNextActivity</label>
      <input type="date" class="form-control" id="dateOfNextActivity" placeholder="DateOfNextActivity" @bind-value="Job.DateOfNextActivity">
    </div>
        <InputSelect @bind-Value="@Job.Type" class="form-select" aria-label="Default select example" >
         <option selected>Open this select menu</option>
            @foreach (var type in Enum.GetValues(typeof(TypeOfJob)))
            {
            
                <option value="@type">@type</option>
            }
        </InputSelect>
  </div>
   <button type="submit" class="btn btn-success">Add Client</button>
   <button type="button" class="btn btn-primary" @onclick="() => NavigationToMainPage()">Back to main page</button>
</EditForm>